{
  "emulators": {
    "firestore": {
      "host": "4200",
      "port": "4201"
    }
  },

  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "target":"signowvideo",
    "public": "functions/videochat/client/build",
    "ignore": [
      "**/client/node_modules/**"  
    ],
    "rewrites": [ {
      "source": "/videochat",
      "function": "app"
    },
    {
      "source": "/api",
      "function": "app"
    },
    {
      "source": "/video/token",
      "function": "app"
    }
    ,
    {
      "source": "/video/disconnect",
      "function": "app"
    } ]
  }
}
